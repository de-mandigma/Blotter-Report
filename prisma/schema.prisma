
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  address   String
  password  String
  staffId   String? @unique
  createdAt DateTime @default(now())
}

model Blotter {
  id          Int    @id @default(autoincrement())
  complainant String
  fullAddress String
  description String
  phoneNumber String
  attachmentFront Bytes // Store file URL
  attachmentBack  Bytes // Store file URL
  status      String @default("Pending")
  createdAt   DateTime @default(now())
}
